.sidebar(data-color='white', data-active-color='info')
  .logo
    a.simple-text.logo-mini(href='#')
      i.ti-crown.crown.logo-image-small
    a.simple-text.logo-normal(href='#')
      i.ti-crown.crown.ml-5
  .sidebar-wrapper
    .user
      .photo
        img(src='/public/firmaImages/'+ foto)
      .info
        a.collapsed(data-toggle='collapse', href='#collapseExample')
          span
            =name
            b.caret
        .clearfix
        #collapseExample.collapse
          ul.nav
            li
              a(href='/profile/'+id)
                span.sidebar-mini-icon P
                span.sidebar-normal=l.getLanguage("profilim")
            li
              a(href='#')
                span.sidebar-mini-icon A
                span.sidebar-normal=l.getLanguage("ayarlar")
            if kullaniciUnvan==1    
              li
                a(href='#')
                  span.sidebar-mini-icon F
                  span.sidebar-normal=l.getLanguage("firmabilgileri")
    ul.nav
      if menu != null 
        each val in menu
          if val.parent==0 
            if val.url && val.url!="" 
              li(class=active==val.id?"active":"")
                a(href=val.url)
                  i(class=val.icon)
                  p=l.getLanguage(val.sayfaAdi)
            else 
              li
                a(data-toggle='collapse', href='#'+l.getLanguage(val.sayfaAdi))
                  i(class=val.icon)
                  p
                    =l.getLanguage(val.sayfaAdi)
                    b.caret
                .collapse(id=l.getLanguage(val.sayfaAdi))
                  ul.nav
                    each child in menu
                      if child.parent==val.id
                        li(class=active==child.id?"active":"")
                          a(href=child.url)
                            span.sidebar-mini-icon(class=child.icon)
                            span.sidebar-normal=l.getLanguage(child.sayfaAdi)
    .after
    ul.nav                      
      li
        a(href='#cikis',onclick='exit()')
          i.nc-icon.nc-bank
          p=l.getLanguage("cikis") 