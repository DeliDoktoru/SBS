.sidebar(data-color='brown', data-active-color='danger')
  .logo
    a.simple-text.logo-mini(href='http://www.creative-tim.com/')
      i.ti-crown.crown.logo-image-small
    a.simple-text.logo-normal(href='http://www.creative-tim.com/')
      i.ti-crown.crown.ml-5
  .sidebar-wrapper
    .user
      .photo
        img(src='https://demos.creative-tim.com/paper-dashboard-2-pro/assets/img/faces/ayo-ogunseinde-2.jpg')
      .info
        a.collapsed(data-toggle='collapse', href='#collapseExample')
          span
            =name
            b.caret
        .clearfix
        #collapseExample.collapse
          ul.nav
            li
              a(href='#')
                span.sidebar-mini-icon MP
                span.sidebar-normal My Profile
            li
              a(href='#')
                span.sidebar-mini-icon EP
                span.sidebar-normal Edit Profile
            li
              a(href='#')
                span.sidebar-mini-icon S
                span.sidebar-normal Settings
    ul.nav
      if menu != null 
        each val in menu
          if val.parent==0 
            if val.url && val.url!="" 
              li(class=active==val.id?"active":"")
                a(href=val.url)
                  i(class=val.icon)
                  p=l.getLanguage(val.sayfaAdi)
            else 
              li
                a(data-toggle='collapse', href='#'+l.getLanguage(val.sayfaAdi))
                  i(class=val.icon)
                  p
                    =l.getLanguage(val.sayfaAdi)
                    b.caret
                .collapse(id=l.getLanguage(val.sayfaAdi))
                  ul.nav
                    each child in menu
                      if child.parent==val.id
                        li(class=active==child.id?"active":"")
                          a(href=child.url)
                            span.sidebar-mini-icon(class=child.icon)
                            span.sidebar-normal=l.getLanguage(child.sayfaAdi)